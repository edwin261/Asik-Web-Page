@{
    ViewData["Title"] = "Asik";
}

<div id="Splash_Screen"></div>

@section Scripts{

<script>
    $(document).ready(function () {
        var now = new Date();
        var millisTill10 = new Date(now.getFullYear(), now.getMonth(), now.getDate(), 23, 59, 59, 0) - now;
        if (millisTill10 < 0) {
            millisTill10 += 86400000;
        }
        setTimeout(function () { location.reload() }, millisTill10);
    });
</script>
}